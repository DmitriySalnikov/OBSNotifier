<UserControl x:Class="OBSNotifier.Modules.UserControls.SettingsItems.SettingsItemSeparatorGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OBSNotifier.Modules.UserControls.SettingsItems"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="400">
    <StackPanel>
        <Grid x:Name="grid_main" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Separator Grid.Column="0" Margin="4,0,4,0"/>
            <TextBlock Grid.Column="1" x:Name="tb_category_text" Text="Category" FontStyle="Italic"/>
            <Separator Grid.Column="2" Margin="4,0,4,0"/>
        </Grid>
        <Separator x:Name="sep_solo" Margin="4,0,4,0"/>
    </StackPanel>
</UserControl>
