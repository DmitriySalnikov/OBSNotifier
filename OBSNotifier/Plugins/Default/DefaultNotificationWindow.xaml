<Window x:Class="OBSNotifier.Plugins.Default.DefaultNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Default Notification"
        WindowStyle="None"
        AllowsTransparency="True"
        Focusable="False"
        Topmost="True" Width="162" Height="48">
    <StackPanel x:Name="stackPanel" VerticalAlignment="Center">
        <Label Content="Something happened" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold"/>
        <Label Content="Description" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="9"/>

    </StackPanel>
</Window>
