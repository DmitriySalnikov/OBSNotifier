<UserControl x:Class="OBSNotifier.Modules.UserControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OBSNotifier.Modules.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="128"
             DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="{Binding UpDownWidth, Mode=OneWay}"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="tb_number" x:FieldModifier="private" Grid.Column="0" Grid.RowSpan="2" Text="1234" VerticalContentAlignment="Center" TextChanged="tb_number_TextChanged" MouseWheel="tb_number_MouseWheel" PreviewMouseWheel="tb_number_PreviewMouseWheel"/>
        <Button x:Name="btn_up" x:FieldModifier="private" Grid.Column="1" Grid.Row="0" Padding="3,-4,3,-2" Content="+" Click="btn_up_Click"/>
        <Button x:Name="btn_down" x:FieldModifier="private" Grid.Column="1" Grid.Row="2" Padding="3,-4,3,-2" Content="-" Click="btn_down_Click"/>
    </Grid>
</UserControl>
